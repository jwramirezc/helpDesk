{
  "version": "1.0.0",
  "description": "Configuración dinámica del header",
  "structure": {
    "buttons": {
      "enabled": true,
      "order": 0
    },
    "userInfo": {
      "enabled": true,
      "order": 1
    },
    "userAvatar": {
      "enabled": true,
      "order": 2
    }
  },
  "buttons": [
    {
      "id": "btn-notifications",
      "name": "Notificaciones",
      "icon": "fas fa-bell",
      "tooltip": "Ver notificaciones",
      "type": "popover",
      "enabled": true,
      "movil": true,
      "order": 1,
      "permissions": {
        "roles": ["user", "admin", "moderator"],
        "required": false
      },
      "badge": {
        "enabled": true,
        "class": "notification-badge",
        "condition": "hasNotifications"
      },
      "popover": {
        "content": "popover-notifications",
        "placement": "bottom",
        "offset": 8,
        "submenu": {
          "enabled": true,
          "items": [
            {
              "id": "view-all-notifications",
              "label": "Ver todas las notificaciones",
              "icon": "fas fa-list",
              "action": "view-all-notifications",
              "type": "item",
              "enabled": true,
              "order": 1,
              "class": "submenu-item"
            },
            {
              "id": "view-unread-notifications",
              "label": "Ver no leídas",
              "icon": "fas fa-envelope",
              "action": "view-unread-notifications",
              "type": "item",
              "enabled": true,
              "order": 2,
              "class": "submenu-item"
            },
            {
              "id": "notification-divider-1",
              "type": "divider",
              "enabled": true,
              "order": 3
            },
            {
              "id": "notification-settings",
              "label": "Configurar notificaciones",
              "icon": "fas fa-cog",
              "action": "notification-settings",
              "type": "item",
              "enabled": true,
              "order": 4,
              "class": "submenu-item"
            },
            {
              "id": "mark-all-read",
              "label": "Marcar todas como leídas",
              "icon": "fas fa-check-double",
              "action": "mark-all-read",
              "type": "item",
              "enabled": true,
              "order": 5,
              "class": "submenu-item"
            }
          ]
        }
      }
    },
    {
      "id": "btn-theme-toggle",
      "name": "Cambiar tema",
      "icon": "fas fa-moon",
      "tooltip": "Cambiar tema",
      "type": "popover",
      "enabled": true,
      "movil": false,
      "order": 2,
      "permissions": {
        "roles": ["user", "admin", "moderator"],
        "required": false
      },
      "popover": {
        "content": "popover-theme",
        "placement": "bottom",
        "offset": 8,
        "submenu": {
          "enabled": true,
          "items": [
            {
              "id": "set-theme-light",
              "label": "Tema claro",
              "icon": "fas fa-sun",
              "action": "set-theme-light",
              "type": "item",
              "enabled": true,
              "order": 1,
              "class": "submenu-item"
            },
            {
              "id": "set-theme-dark",
              "label": "Tema oscuro",
              "icon": "fas fa-moon",
              "action": "set-theme-dark",
              "type": "item",
              "enabled": true,
              "order": 2,
              "class": "submenu-item"
            },
            {
              "id": "set-theme-auto",
              "label": "Automático",
              "icon": "fas fa-magic",
              "action": "set-theme-auto",
              "type": "item",
              "enabled": true,
              "order": 3,
              "class": "submenu-item"
            }
          ]
        }
      }
    },
    {
      "id": "btn-language-selector",
      "name": "Idioma",
      "icon": "fas fa-globe",
      "tooltip": "Cambiar idioma",
      "type": "popover",
      "enabled": true,
      "movil": false,
      "order": 3,
      "permissions": {
        "roles": ["user", "admin", "moderator"],
        "required": false
      },
      "popover": {
        "content": "popover-language",
        "placement": "bottom",
        "offset": 8,
        "submenu": {
          "enabled": true,
          "items": [
            {
              "id": "set-language-es",
              "label": "Español",
              "icon": "🇪🇸",
              "action": "set-language-es",
              "type": "item",
              "enabled": true,
              "order": 1,
              "class": "submenu-item"
            },
            {
              "id": "set-language-en",
              "label": "English",
              "icon": "🇺🇸",
              "action": "set-language-en",
              "type": "item",
              "enabled": true,
              "order": 2,
              "class": "submenu-item"
            },
            {
              "id": "set-language-fr",
              "label": "Français",
              "icon": "🇫🇷",
              "action": "set-language-fr",
              "type": "item",
              "enabled": true,
              "order": 3,
              "class": "submenu-item"
            }
          ]
        }
      }
    },
    {
      "id": "btn-help",
      "name": "Ayuda",
      "icon": "fas fa-question-circle",
      "tooltip": "Ayuda y soporte",
      "type": "popover",
      "enabled": true,
      "movil": false,
      "order": 4,
      "permissions": {
        "roles": ["user", "admin", "moderator"],
        "required": false
      },
      "popover": {
        "content": "popover-help",
        "placement": "bottom",
        "offset": 8,
        "submenu": {
          "enabled": true,
          "items": [
            {
              "id": "open-documentation",
              "label": "Documentación",
              "icon": "fas fa-book",
              "action": "open-documentation",
              "type": "item",
              "enabled": true,
              "order": 1,
              "class": "submenu-item"
            },
            {
              "id": "open-tutorials",
              "label": "Tutoriales",
              "icon": "fas fa-graduation-cap",
              "action": "open-tutorials",
              "type": "item",
              "enabled": true,
              "order": 2,
              "class": "submenu-item"
            },
            {
              "id": "open-faq",
              "label": "Preguntas frecuentes",
              "icon": "fas fa-question",
              "action": "open-faq",
              "type": "item",
              "enabled": true,
              "order": 3,
              "class": "submenu-item"
            },
            {
              "id": "help-divider-1",
              "type": "divider",
              "enabled": true,
              "order": 4
            },
            {
              "id": "contact-support",
              "label": "Contactar soporte",
              "icon": "fas fa-headset",
              "action": "contact-support",
              "type": "item",
              "enabled": true,
              "order": 5,
              "class": "submenu-item"
            },
            {
              "id": "send-feedback",
              "label": "Enviar feedback",
              "icon": "fas fa-comment",
              "action": "send-feedback",
              "type": "item",
              "enabled": true,
              "order": 6,
              "class": "submenu-item"
            }
          ]
        }
      }
    }
  ],
  "userInfo": {
    "enabled": true,
    "fields": [
      {
        "id": "user-name",
        "name": "Nombre del usuario",
        "source": "user.nombre",
        "class": "user-name",
        "enabled": true,
        "order": 1,
        "permissions": {
          "roles": ["user", "admin", "moderator"],
          "required": false
        }
      },
      {
        "id": "user-role",
        "name": "Rol del usuario",
        "source": "user.rol",
        "class": "user-role",
        "enabled": true,
        "order": 2,
        "permissions": {
          "roles": ["user", "admin", "moderator"],
          "required": false
        }
      }
    ]
  },
  "userAvatar": {
    "enabled": true,
    "defaultIcon": "fas fa-user",
    "altText": "Avatar del usuario",
    "class": "user-avatar"
  },
  "submenu": {
    "defaults": {
      "maxItems": 10,
      "showIcons": true,
      "showDividers": true
    }
  }
}
