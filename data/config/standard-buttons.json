      "manager": [
        "btn-sidebar-help",
        "btn-sidebar-settings",
        "btn-toolbar-save",
        "btn-toolbar-export",
        "btn-floating-chat",
        "btn-dashboard-refresh",
        "btn-dashboard-filter",
        "btn-form-submit",
        "btn-form-reset",
        "btn-modal-close",
        "btn-modal-confirm"
