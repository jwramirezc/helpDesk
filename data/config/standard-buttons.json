  "buttons": {
    "btn-sidebar-help": {
      "name": "Ayuda",
      "icon": "fas fa-question-circle",
      "type": "popover",
      "category": "sidebar",
      "position": "left",
      "order": 1,
      "tooltip": "Ayuda y documentación",
      "access": true,
      "popover": {
        "content": "help-content",
        "title": "Centro de Ayuda",
        "size": "medium"
